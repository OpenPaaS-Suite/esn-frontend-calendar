.cal-event-date-edition
  .col-xs-12
    .form-group
      .input-group
        span.input-group-addon
          i.mdi.mdi-clock
        .col-xs-12.col-md-4
          .fg-line
            esn-date-picker(
              ng-model='ctrl.start',
              ng-change="ctrl.onStartDateChange()",
              placeholder="{{ 'Start date' | translate }}",
              ng-disabled="ctrl.disabled",
              ng-blur="ctrl.dateOnBlurFn()",
              size="10",
              date-format="{{::ctrl.dateFormat}}",
              autoclose="1",
              start-week="1",
              custom-attributes="{'cal-date-to-moment': 'cal-date-to-moment'}")
          .form-group
            .fg-line(ng-if='!ctrl.full24HoursDay')
              time-select(
                date="ctrl.start",
                on-time-change="ctrl.onStartDateTimeChange",
                locale="{{ ::ctrl.locale }}",
                time-format="{{ ::ctrl.timeFormat }}"
              )
        .col-xs-12.col-md-4
          .fg-line
            esn-date-picker(
              ng-model='ctrl.end',
              ng-change="ctrl.onEndDateChange()",
              placeholder="{{ 'End date' | translate }}",
              ng-disabled="ctrl.disabled",
              ng-blur="ctrl.dateOnBlurFn()",
              size="10",
              date-format="{{::ctrl.dateFormat}}",
              is-all-day="ctrl.full24HoursDay",
              min-date="ctrl.minEndDate",
              autoclose="1",
              start-week="1",
              custom-attributes="{'cal-date-to-moment': 'cal-date-to-moment'}")
          .form-group
            .fg-line(ng-if='!ctrl.full24HoursDay')
              time-select(
                date="ctrl.end",
                on-time-change="ctrl.onEndDateTimeChange",
                locale="{{ ::ctrl.locale }}",
                time-format="{{ ::ctrl.timeFormat }}"
              )
        .col-xs-12.col-md-4.hidden-xs
          .form-group.text-center
            .fg-line.nopadding
              .checkbox.allday
                label
                  input(type="checkbox",
                    ng-model='ctrl.full24HoursDay',
                    ng-disabled="ctrl.disabled",
                    ng-change="ctrl.allDayOnChange();")
                  i.input-helper
                  span {{ 'All day' | translate }}
        .col-xs-12.col-md-4.visible-xs
          .form-group.nopadding
            .fg-line
              .checkbox.allday
                label
                  input(type="checkbox",
                    ng-model='ctrl.full24HoursDay',
                    ng-disabled="ctrl.disabled",
                    ng-change="ctrl.allDayOnChange();")
                  i.input-helper
                  span {{ 'All day' | translate }}

