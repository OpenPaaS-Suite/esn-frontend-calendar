.calendar
  .col-xs-12(ng-if="alertMessage")
    span.calendar-error-message {{alertMessage}}
  .calendar-view
    .col-md-3.col-lg-2.hidden-xs.hidden-sm(ng-show="isSidebarVisible")
      cal-sidebar(calendar-home-id="calendarHomeId")
    .col-xs-12.col-md-9.col-lg-12.no-padding-xs
      .ui-view(name='content')
